<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>All Tasks</title>
    <style>
      :root {
        --bg: #f7f7fb;
        --card: #ffffff;
        --text: #1f2937;
        --muted: #6b7280;
        --primary: #2563eb;
        --primary-ghost: #e5edff;
        --danger: #dc2626;
        --danger-ghost: #ffe5e5;
        --warning: #d97706;
        --ok: #059669;
        --ring: rgba(37, 99, 235, 0.25);
        --radius: 14px;
      }

      * { box-sizing: border-box; }

      body {
        margin: 0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Noto Sans, Arial, "Apple Color Emoji", "Segoe UI Emoji";
        background: var(--bg);
        color: var(--text);
      }

      .page {
        max-width: 880px;
        margin: 0 auto;
        padding: 28px 16px 48px;
      }

      header {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
        gap: 12px;
        margin-bottom: 18px;
      }

      h1 {
        margin: 0;
        font-size: 22px;
        letter-spacing: .2px;
      }

      .subtle {
        color: var(--muted);
        font-size: 14px;
      }

      .card {
        background: var(--card);
        border-radius: var(--radius);
        box-shadow: 0 1px 2px rgba(0,0,0,.04), 0 8px 24px rgba(0,0,0,.06);
        padding: 14px;
      }

      .list {
        display: grid;
        grid-template-columns: 1fr;
        gap: 12px;
        padding: 0;
        margin: 0;
        list-style: none;
      }

      @media (min-width: 720px) {
        .list { grid-template-columns: 1fr 1fr; }
      }

      .task {
        border: 1px solid #eef2f7;
        border-radius: 12px;
        padding: 14px;
        display: grid;
        gap: 10px;
        transition: border-color .15s ease, transform .06s ease;
        background: #fff;
      }
      .task:hover { border-color: #dbe4f0; transform: translateY(-1px); }

      .task-title {
        font-weight: 600;
        margin: 0;
        line-height: 1.3;
      }
      .task-title a {
        color: inherit;
        text-decoration: none;
      }
      .task-title a:hover { text-decoration: underline; }

      .meta {
        display: flex;
        flex-wrap: wrap;
        gap: 8px 12px;
        align-items: center;
        color: var(--muted);
        font-size: 13px;
      }

      .badges { display: flex; gap: 6px; align-items: center; }

      .badge {
        display: inline-block;
        padding: 3px 8px;
        border-radius: 10px;
        font-size: 12px;
        line-height: 1.2;
        border: 1px solid transparent;
        background: #f3f4f6;
        color: #374151;
      }
      .badge.status-finished { background: #ecfdf5; color: var(--ok); border-color: #d1fae5; }
      .badge.status-unfinished { background: #fff7ed; color: var(--warning); border-color: #ffedd5; }
      .badge.status-canceled { background: var(--danger-ghost); color: var(--danger); border-color: #ffcaca; }

      .badge.prio-low { background: #eef2ff; color: #4f46e5; border-color: #e0e7ff; }
      .badge.prio-medium { background: #fffbeb; color: #b45309; border-color: #fde68a; }
      .badge.prio-high { background: #fee2e2; color: #ce6060; border-color: #fecaca; }
      .badge.prio-urgent { background: #fee2e2; color: #b91c1c; border-color: #fecaca; }


      .actions {
        display: flex;
        gap: 8px;
        margin-top: 4px;
      }

      .btn {
        appearance: none;
        border: 1px solid #dbe4f0;
        background: #fff;
        color: #111827;
        padding: 6px 10px;
        border-radius: 10px;
        font-size: 13px;
        cursor: pointer;
      }
      .btn:hover { border-color: var(--primary); box-shadow: 0 0 0 3px var(--ring); }
      .btn.ghost-danger { background: var(--danger-ghost); color: var(--danger); border-color: #ffcaca; }
      .btn.ghost-danger:hover { box-shadow: 0 0 0 3px rgba(220,38,38,.18); }
    </style>
  </head>
  <body>
    <div class="page">
      <header>
        <div>
          <a href="/users/home">User page</a>
          <br>
          <a href="">Add new task</a>
        </div>
        <div>
                  <h1>Hi, <%= name %></h1>
        <div class="subtle">
          <%= tasks && tasks.length ? tasks.length + ' tasks' : 'No tasks yet' %>
        </div>
        </div>

      </header>

      <% if (tasks && tasks.length) { %>
        <section class="card">
          <ul class="list">
            <% for (const task of tasks) { %>
              <li class="task">
                <h2 class="task-title">
                  <a href="/tasks/<%= task.id %>"><%= task.title %></a>
                </h2>

                <div class="meta">
                  <span>Updated: <%= new Date(task.updatedAt).toLocaleString('zh-TW', { hour12: false }) %></span>

                  <div class="badges">
                    <% const status = (task.status || '').toLowerCase(); %>
                    <span class="badge status-<%= status %>">
                      <%= task.status %>
                    </span>

                    <% if (typeof task.priority !== 'undefined' && task.priority !== null) { %>
                      <% const pr = Number(task.priority); %>
                      <span class="badge <%= pr===1 ? 'prio-urgent' : pr === 2 ? 'prio-high' : pr === 3 ? 'prio-medium' : 'prio-low' %>">
                        Priority: <%= pr === 2 ? 'High' : pr === 1 ? 'Medium' : 'Low' %>
                      </span>
                    <% } %>
                  </div>
                </div>

                <% if (task.description) { %>
                  <p class="subtle"><%= task.description %></p>
                <% } %>

                <div class="actions">
                  <!-- wire up to your routes; method override if needed -->
                  <form action="/tasks/<%= task.id %>/cancel" method="post">
                    <button class="btn" type="submit">Cancel</button>
                  </form>
                  <form action="/tasks/<%= task.id %>/delete" method="post">
                    <button class="btn ghost-danger" type="submit">Delete</button>
                  </form>
                </div>
              </li>
            <% } %>
          </ul>
        </section>
      <% } else { %>
        <section class="card" style="text-align:center; padding:24px;">
          <p class="subtle" style="margin:6px 0 16px;">You donâ€™t have any tasks yet.</p>
          <a class="btn" href="/tasks/new">Create your first task</a>
        </section>
      <% } %>
    </div>
  </body>
</html>
