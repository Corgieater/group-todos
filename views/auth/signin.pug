doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Sign In
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css")
  body
    //- 顯示上方訊息（若有）
    include ../partials/message

    //- 簡潔導覽列（可移除）
    nav.navbar.navbar-expand-md.bg-body.border-bottom
      .container
        a.navbar-brand(href="/") Group Todos
        #mainNav.collapse.navbar-collapse
        ul.navbar-nav.ms-auto
          li.nav-item
            a.nav-link(href="/auth/signup") Sign Up

    //- 置中卡片版面
    main
      .container.min-vh-100.d-flex.align-items-center.justify-content-center.py-5
        .col-12.col-sm-10.col-md-7.col-lg-5
          .card.shadow-sm
            .card-body.p-4.p-md-5
              h1.h4.text-center.mb-4 Sign in
              form(action="/api/auth/signin", method="POST", novalidate)
                .form-floating.mb-3
                  input#email.form-control(
                    type="email"
                    name="email"
                    placeholder="name@example.com"
                    value="test@test.com"
                    required
                    autocomplete="email"
                  )
                  label(for="email") Email address
                .form-floating.mb-3
                  input#password.form-control(
                    type="password"
                    name="password"
                    placeholder="Password"
                    value="test"
                    required
                    autocomplete="current-password"
                  )
                  label(for="password") Password
                .d-flex.justify-content-between.align-items-center.mb-3
                  a.small(href="/auth/forgot-password") Forgot password?
                button.btn.btn-primary.w-100(type="submit") Login
              .text-center.mt-3
                span.text-body-secondary Don't have an account?
                |  
                a(href="/auth/signup") Sign up

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js")
