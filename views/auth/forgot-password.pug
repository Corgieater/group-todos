doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Reset Password
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css")
  body
    //- 上方訊息（成功/錯誤等）
    include ../partials/message

    //- 簡潔導覽列（可視需要移除）
    nav.navbar.navbar-expand-md.bg-body.border-bottom
      .container
        a.navbar-brand(href="/") Group Todos

    //- 置中卡片表單
    main
      .container.min-vh-100.d-flex.align-items-center.justify-content-center.py-5
        .col-12.col-sm-10.col-md-7.col-lg-5
          .card.shadow-sm
            .card-body.p-4.p-md-5
              h1.h4.text-center.mb-4 Reset password

              //- 從 flash.form 回填欄位（若存在），否則保留預設值
              - var form = (typeof flash !== 'undefined' && flash && flash.form) ? flash.form : {}

              form(action="/api/auth/reset-password", method="POST", novalidate)
                .form-floating.mb-3
                  input#email.form-control(
                    type="email"
                    name="email"
                    placeholder="name@example.com"
                    value=(form.email || 'test@test.com')
                    autocomplete="email"
                    required
                  )
                  label(for="email") Email address
                button.btn.btn-primary.w-100(type="submit") Verify Email

              .text-center.mt-3
                a(href="/auth/signin") Back to Sign in
                span.mx-2 ·
                a(href="/") Home

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js")
